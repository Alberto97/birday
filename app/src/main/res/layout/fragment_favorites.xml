<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:id="@+id/eventList"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical">

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/homeCard"
            app:strokeWidth="@dimen/card_stroke"
            app:strokeColor="@color/goodGrayTranslucent"
            app:cardElevation="0dp"
            app:cardCornerRadius="@dimen/card_corners"
            app:rippleColor="?colorAccent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/card_margin">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <!-- Media -->
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/card_image_height"
                    app:srcCompat="@drawable/ic_party_24dp"
                    android:scaleType="centerCrop"
                    android:contentDescription="@string/app_name"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:id="@+id/home_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/stats"
                        android:textAppearance="?attr/textAppearanceHeadline6"/>
                    <TextView
                        android:id="@+id/home_subtitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="@string/no_stats"
                        android:textAppearance="?attr/textAppearanceBody2"
                        android:textColor="?android:attr/textColorSecondary"/>
                    <TextView
                        android:id="@+id/home_description"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:text="@string/no_stats_description"
                        android:textAppearance="?attr/textAppearanceBody2"
                        android:textColor="?android:attr/textColorSecondary"/>

                </LinearLayout>

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        <TextView
            android:id="@+id/noFavorites"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textAppearance="@style/TextAppearance.MaterialComponents.Headline5"
            android:paddingLeft="@dimen/placeholders_horizontal_padding"
            android:paddingRight="@dimen/placeholders_horizontal_padding"
            android:paddingBottom="@dimen/placeholders_horizontal_padding"
            android:paddingTop="@dimen/placeholders_vertical_padding"
            android:text="@string/no_favorites"
            android:textColor="@color/goodGraySemiTranslucent"
            android:gravity="center"
            android:drawableTop="@drawable/ic_neutral_96dp"
            android:drawableTint="@color/goodGraySemiTranslucent" />
    </LinearLayout>

</ScrollView>
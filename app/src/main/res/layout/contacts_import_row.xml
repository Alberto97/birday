<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/importContacts"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingLeft="@dimen/settings_row_padding"
    android:paddingRight="@dimen/settings_row_padding"
    android:paddingBottom="@dimen/settings_row_padding"
    android:paddingTop="@dimen/settings_row_padding"
    android:hapticFeedbackEnabled="false"
    android:background="?attr/selectableItemBackground">

        <TextView
            android:id="@+id/importContactsTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/import_contacts_title"
            android:textAppearance="@style/TextAppearance.MaterialComponents.Body1" />

        <TextView
            android:id="@+id/importContactsDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/import_contacts_description"
            android:textAppearance="@style/TextAppearance.MaterialComponents.Body2"
            android:textStyle="normal" />

</LinearLayout>
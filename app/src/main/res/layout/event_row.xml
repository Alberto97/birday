<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="@dimen/list_vertical_padding">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_weight="0.8">

        <TextView
            android:id="@+id/eventPerson"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="@style/TextAppearance.MaterialComponents.Headline6"
            android:padding="@dimen/in_row_padding" />
        <TextView
            android:id="@+id/eventDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="@style/TextAppearance.MaterialComponents.Headline6"
            android:padding="@dimen/in_row_padding" />
        <TextView
            android:id="@+id/eventYears"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="@style/TextAppearance.MaterialComponents.Body1"
            android:padding="@dimen/in_row_padding" />

    </LinearLayout>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/animated_to_favorite"
        android:clickable="true"
        android:focusable="true"
        android:padding="@dimen/in_row_image_padding"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:layout_weight="0.2"
        android:contentDescription="@string/add_favorite"/>

</LinearLayout>